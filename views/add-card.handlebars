<!-- Create new account card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Add Account</div>
  </div>
  <div class="accountCardBody">
    <form id="newCard" class="comment-form">
    <p>Title</p>
    <input id="newCardTitle" class="form-control" />
    <p>Credit Limit</p>
    <input id="newCardLimit" class="form-control" />
    <p>Current Balance</p>
    <input id="newCardBalance" class="form-control" />
    <p class="centered">
      <button id="createCard" class="btn btn-primary">Create</button>
      <button id="cancelButton" class="btn">Cancel</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/addCard.js"></script>
<script src="../js/cancelButton.js"></script>