<!-- Edit miscellaneous loan card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Edit Miscellaneous Loan</div>
  </div>
  <div class="accountCardBody">
    <form id="viewLoan" class="comment-form">
    <p>Title</p>
    <input id="viewLoanTitle" class="form-control" value="{{title}}" />
    <p>Principal Amount</p>
    <input id="viewLoanAmount" class="form-control" value="{{loan_amount}}" />
    <p>Annual Interest Rate</p>
    <input id="viewLoanAnnualInterestRate" class="form-control" value="{{annual_interest_rate}}" />
    <p>Loan Term in Years</p>
    <input id="viewLoanMonths" class="form-control" value="{{months}}" />
    <p>Current Balance</p>
    <input id="viewLoanBalance" class="form-control" value="{{balance}}" />
    <p class="centered">
      <button id="updateLoanBtn" class="btn btn-primary">Update Miscellaneous Loan</button>
      <button id="deleteLoanBtn" class="btn btn-primary">Delete</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/updateLoan.js"></script>
<script src="../js/deleteLoan.js"></script>