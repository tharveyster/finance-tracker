<!-- Show accounts if any exist, or show 'no mortgage' message if there are none -->
  <h3><a href="/iras">IRA Accounts</a></h3>
  {{#if iras}}
  <table class="gridTable">
    <tr>
      <th class="gridCell">Account Name</th>
      <th class="gridCell">Current Balance</th>
    </tr>
    <!-- Loop over each object in the accounts array -->
    {{#each iras as |ira| }}
      {{> iraGrid}}
    {{/each}}
    <tr>
      <th>Total</th>
      <th class="gridCell gridCurrency">${{totalIraBalance}}</th>
    </tr>
  </table>
  {{else}}
    <p class="centered">No IRA accounts available. Go to the IRA Accounts page and click the "Add IRA Account" button to add one.</p>
  {{/if}}
