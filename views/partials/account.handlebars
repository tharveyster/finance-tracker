<!-- Show accounts if any exist, or show 'no mortgage' message if there are none -->
  <h3><a href="/accounts">Bank Accounts</a></h3>
  {{#if accounts}}
  <table class="gridTable">
    <tr>
      <th class="gridCell">Account Name</th>
      <th class="gridCell">Current Balance</th>
    </tr>
    <!-- Loop over each object in the accounts array -->
    {{#each accounts as |account| }}
      {{> accountGrid}}
    {{/each}}
    <tr>
      <th>Total</th>
      <th class="gridCell gridCurrency">${{totalAccountBalance}}</th>
    </tr>
  </table>
  {{else}}
    <p class="centered">No bank accounts available. Go to the Bank Accounts page and click the "Add Bank Account" button to add one.</p>
  {{/if}}
