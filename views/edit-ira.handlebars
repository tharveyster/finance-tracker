<!-- Edit car loan card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Edit IRA Account</div>
  </div>
  <div class="accountCardBody">
    <form id="viewIra" class="comment-form">
    <p>Title</p>
    <input id="viewIraTitle" class="form-control" value="{{title}}" />
    <p>Current Balance</p>
    <input id="viewIraBalance" class="form-control" value="{{balance}}" />
    <p class="centered">
      <button id="updateIraBtn" class="btn btn-primary">Update</button>
      <button id="deleteIraBtn" class="btn btn-danger">Delete</button>
      <button id="cancelButton" class="btn">Cancel</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/updateIra.js"></script>
<script src="../js/deleteIra.js"></script>
<script src="../js/cancelButton.js"></script>