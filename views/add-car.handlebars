<!-- Create new mortgage card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Add Car Loan</div>
  </div>
  <div class="accountCardBody">
    <form id="newCar" class="comment-form">
    <p>Title</p>
    <input id="newCarTitle" class="form-control" />
    <p>Principal Amount</p>
    <input id="newCarLoanAmount" class="form-control" />
    <p>Annual Interest Rate</p>
    <input id="newCarAnnualInterestRate" class="form-control" />
    <p>Loan Term in Months</p>
    <input id="newCarMonths" class="form-control" />
    <p class="centered">
      <button id="createCar" class="btn btn-primary">Create</button>
      <button id="cancelButton" class="btn">Cancel</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/addCar.js"></script>
<script src="../js/cancelButton.js"></script>