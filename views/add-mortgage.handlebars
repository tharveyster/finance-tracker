<!-- Create new mortgage card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Add Mortgage</div>
  </div>
  <div class="accountCardBody">
    <form id="newMortgage" class="comment-form">
    <p>Title</p>
    <input id="newMortgageTitle" class="form-control" />
    <p>Principal Amount</p>
    <input id="newMortgageLoanAmount" class="form-control" />
    <p>Annual Interest Rate</p>
    <input id="newMortgageAnnualInterestRate" class="form-control" />
    <p>Loan Term in Years</p>
    <input id="newMortgageYears" class="form-control" />
    <p class="centered">
      <button id="createMortgage" class="btn btn-primary">Create</button>
      <button id="cancelButton" class="btn">Cancel</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/addMortgage.js"></script>
<script src="../js/cancelButton.js"></script>