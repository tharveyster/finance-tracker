<!-- Create new account card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Add Account</div>
  </div>
  <div class="accountCardBody">
    <form id="newAccount" class="comment-form">
    <p>Title</p>
    <input id="newAccountTitle" class="form-control" />
    <p>Credit Limit</p>
    <input id="newAccountLimit" class="form-control" />
    <p>Current Balance</p>
    <input id="newAccountBalance" class="form-control" />
    <p class="centered">
      <button id="createAccount" class="btn btn-primary">Create</button>
      <button id="cancelButton" class="btn btn-secondary">Cancel</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/addAccount.js"></script>
<script src="../js/cancelButton.js"></script>