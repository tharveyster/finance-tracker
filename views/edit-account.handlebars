<!-- Edit account card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Edit Credit Card Account</div>
  </div>
  <div class="accountCardBody">
    <form id="viewAccount" class="comment-form">
    <p>Title</p>
    <input id="viewAccountTitle" class="form-control" value="{{title}}" />
    <p>Credit Limit</p>
    <input id="viewAccountLimit" class="form-control" value="{{limit}}" />
    <p>Current Balance</p>
    <input id="viewAccountBalance" class="form-control" value="{{balance}}" />
    <p class="centered">
      <button id="updateAccountBtn" class="btn btn-primary">Update Account</button>
      <button id="deleteAccountBtn" class="btn btn-primary">Delete</button>
      <button id="cancelButton" class="btn btn-secondary">Cancel</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/updateAccount.js"></script>
<script src="../js/deleteAccount.js"></script>
<script src="../js/cancelButton.js"></script>