<!-- Edit car loan card -->
<div class="accountCard">
  <div class="accountCardHeader">
    <div class="accountCardTitle">Edit Bank Account</div>
  </div>
  <div class="accountCardBody">
    <form id="viewCar" class="comment-form">
    <p>Title</p>
    <input id="viewBankTitle" class="form-control" value="{{title}}" />
    <p>Current Balance</p>
    <input id="viewBankBalance" class="form-control" value="{{balance}}" />
    <p class="centered">
      <button id="updateBankBtn" class="btn btn-primary">Update</button>
      <button id="deleteBankBtn" class="btn btn-danger">Delete</button>
      <button id="cancelButton" class="btn">Cancel</button>
    </p>
    </form>
  </div>
</div>

<script src="../js/updateBank.js"></script>
<script src="../js/deleteBank.js"></script>
<script src="../js/cancelButton.js"></script>